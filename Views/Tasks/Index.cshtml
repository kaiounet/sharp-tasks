@using sharp_tasks.Enums
@using sharp_tasks.Helpers

<h1>You have created @ViewBag.tasks.Count tasks</h1>

<a href="@Url.Action("Add", "Tasks")" class="btn btn-success mb-3">Add New Task</a>

@if (ViewBag.tasks != null && ViewBag.tasks.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Label</th>
                <th>Description</th>
                <th>Limit Date</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int taskIndex = 0;
            }
            @foreach (var task in ViewBag.tasks)
            {
                <tr>
                    <td>@task.Label</td>
                    <td>@task.Description</td>
                    <td>@task.LimiteDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @{
                            var stateClass = StateHelper.GetStateBadgeClass(task.TaskState);
                            var stateText = StateHelper.GetStateDisplayText(task.TaskState);
                        }
                        <span class="@stateClass">@stateText</span>
                    </td>
                    <td>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="@Url.Action("Edit", "Tasks", new { index = taskIndex })" class="btn btn-sm btn-primary d-flex align-items-center"
                                title="Edit">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>

                            <form asp-action="IncrementState" method="post" class="d-inline">
                                <input type="hidden" name="index" value="@taskIndex" />
                                <button type="submit" class="btn btn-sm btn-info d-flex align-items-center" title="Advance State">
                                    <i class="bi bi-arrow-right-circle me-1"></i> Advance
                                </button>
                            </form>

                            <button type="button" class="btn btn-sm btn-danger d-flex align-items-center" title="Delete" data-bs-toggle="modal"
                                data-bs-target="#deleteModal-@taskIndex">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </div>
                    </td>
                </tr>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal-@taskIndex" tabindex="-1" aria-labelledby="deleteModalLabel-@taskIndex"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel-@taskIndex">Confirm Delete</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete the task "@task.Label"?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="index" value="@taskIndex" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                taskIndex++;
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No tasks found.
    </div>
}